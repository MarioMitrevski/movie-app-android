<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAppAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_cyan</item>
        <item name="colorPrimaryVariant">@color/dark_slate_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/platinum</item>
        <item name="colorSecondaryVariant">@color/silver</item>
        <item name="colorOnSecondary">@color/rich_black</item>
        <!-- Customize your theme here. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>

        <item name="fontFamily">@font/montserrat</item>

    </style>

    <style name="BackButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/back_button_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
</resources>